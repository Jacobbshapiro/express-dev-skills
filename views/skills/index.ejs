<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Express Skills</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <h1>Skills as of <%= time %></h1>
    <ul>
        <% skills.forEach(function(skill) { %>
            <li>
                <a href="/skills/<%= skill.id %>"><%= skill.skill %></a>
                    -
                <%= skill.done ? 'done' : 'not done' %>
                <form action="/skills/<%= skill.id %>?_method=DELETE"
                    class="delete-form" method="POST">
                    <button type="submit">X</button>
                </form>
            </li>
        <% }); %>
    </ul>
    <a href="/skills/new">Add Skill</a>
    <a href="/">Home page</a>
</body>

</html>